@model List<TableResultDTO>
@{
    ViewData["Title"] = "Masalar";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<h4 class="page-title">Masalar</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="card-sub">
                    Masa İşlemlerini Bu Tablodan Yapabilirsin
                    <a href="/Table/CreateTable/" class="btn btn-primary float-right">Masa Ekle</a>
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Masa Adı</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Status</td>
                                <td><a href="/Table/UpdateTable/@item.TableId" class="btn btn-outline-warning">Güncelle</a></td>
                                <td><a href="/Table/DeleteTable/@item.TableId" class="btn btn-outline-danger" onclick="return confirm('Bu masayı silmek istediğinize emin misiniz?');">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
