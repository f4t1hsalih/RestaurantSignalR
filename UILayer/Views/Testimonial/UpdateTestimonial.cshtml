@model TestimonialUpdateDTO
@{
    ViewData["Title"] = "Referans Düzenle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Referans Düzenle</div>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="TestimonialId" />
                    <div class="form-group">
                        <label for="name">Adı</label>
                        <input type="text" class="form-control" asp-for="Name" id="name">
                    </div>
                    <div class="form-group">
                        <label for="title">Ünvanı</label>
                        <input type="text" class="form-control" asp-for="Title" id="title">
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Resim Yolu</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                    </div>
                    <div class="form-group">
                        <label for="comment">Yorumu</label>
                        <textarea class="form-control" rows="5" asp-for="Comment" id="comment"></textarea>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
