@model DiscountCreateDTO
@{
    ViewData["Title"] = "İndirim Ekle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">İndirim Ekle</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="title">Ürün</label>
                        <input type="text" class="form-control" asp-for="Title" id="title">
                    </div>
                    <div class="form-group">
                        <label for="price">İndirimli Fiyat</label>
                        <input type="number" class="form-control" asp-for="Amount" id="price" step="0.01">
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Resim Yolu</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                    </div>
                    <div class="form-group">
                        <label for="description">Açıklama</label>
                        <textarea class="form-control" rows="4" asp-for="Description" id="description"></textarea>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Ekle</button>
                </div>
            </div>
        </form>
    </div>
</div>
