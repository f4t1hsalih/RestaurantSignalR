@model List<TestimonialResultDTO>
@{
    ViewData["Title"] = "Referans Yorumları";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h4 class="page-title">Referans Yorumları</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="card-sub">
                    Referans Yorumları İşlemlerini Bu Tablodan Yapabilirsin
                    <a href="/Testimonial/CreateTestimonial/" class="btn btn-primary float-right">Referans Ekle</a>
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">İsim</th>
                            <th scope="col">Ünvan</th>
                            <th scope="col">Yorum</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img class="photo mr-2" src="@item.ImageUrl" alt="@item.Name">
                                        <span>@item.Name</span>
                                    </div>
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Comment</td>
                                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-warning">Güncelle</a></td>
                                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger" onclick="return confirm('Bu referansı silmek istediğinize emin misiniz?');">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
