@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeader")

<body class="sub_page">

    @await Component.InvokeAsync("_UILayoutNavbar")
    </div> <!-- Bu div'i silme -->

    <section class="message_section layout_padding">
        <div class="container">
            <div class="container mt-5">

                <div class="row">
                    <div class="col-12">
                        <h3 class="text-center mb-4">Restaurant Anlık Mesajlaşma</h3>
                    </div>
                </div>

                <form class="mt-3">
                    <div class="row mb-3 justify-content-center">
                        <div class="col-md-4">
                            <label for="userinput" class="form-label">Kullanıcı Adınız:</label>
                            <input type="text" id="userinput" class="form-control" placeholder="Adınızı giriniz" />
                        </div>
                    </div>

                    <div class="row mb-3 justify-content-center">
                        <div class="col-md-4">
                            <label for="messageinput" class="form-label">Mesajınız:</label>
                            <input type="text" id="messageinput" class="form-control" placeholder="Mesajınızı yazınız" />
                        </div>
                    </div>

                    <div class="row mb-3 justify-content-center">
                        <div class="col-md-4 text-center">
                            <input type="button" id="sendbutton" value="Gönder" class="btn btn-primary btn-lg" />
                        </div>
                    </div>
                </form>

                <div class="row p-1">
                    <div class="col-12">
                        <hr />
                    </div>
                </div>

                <div class="row p-1">
                    <div class="col-12">
                        <ul id="messagelist" class="list-group">
                            <li id="placeholder-message" class="list-group-item text-muted">Mesajınız burada görüntülenecek.</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooter")

    @await Component.InvokeAsync("_UILayoutScripts")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>

</body>

</html>
