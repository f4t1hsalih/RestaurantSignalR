@model TestimonialCreateDTO
@{
    ViewData["Title"] = "Referans Ekle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Referans Ekle</div>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label for="name">Adı</label>
                        <input type="text" class="form-control" asp-for="Name" id="name" >
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="title">Ünvanı</label>
                        <input type="text" class="form-control" asp-for="Title" id="title" >
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="imageUrl">Resim Yolu</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl" >
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="comment">Yorumu</label>
                        <textarea class="form-control" rows="5" asp-for="Comment" id="comment" ></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Yorumu Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
