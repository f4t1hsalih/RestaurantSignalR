@model FeatureUpdateDTO
@{
    ViewData["Title"] = "Slider Düzenle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Slider'ları Düzenle</div>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="FeatureId" />
                    <div class="form-group">
                        <label for="title1">Başlık1</label>
                        <input type="text" class="form-control" asp-for="Title1" id="title1">
                    </div>
                    <div class="form-group">
                        <label for="description1">Açıklama1</label>
                        <textarea class="form-control" rows="4" asp-for="Description1" id="description1"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="title2">Başlık2</label>
                        <input type="text" class="form-control" asp-for="Title2" id="title2">
                    </div>
                    <div class="form-group">
                        <label for="description2">Açıklama2</label>
                        <textarea class="form-control" rows="4" asp-for="Description2" id="description2"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="title3">Başlık3</label>
                        <input type="text" class="form-control" asp-for="Title3" id="title3">
                    </div>
                    <div class="form-group">
                        <label for="description3">Açıklama3</label>
                        <textarea class="form-control" rows="4" asp-for="Description3" id="description3"></textarea>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>