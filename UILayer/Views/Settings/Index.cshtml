@model UserEditDTO
@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Kullanıcı Bilgileri</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">Ad</label>
                        <input type="text" class="form-control" asp-for="Name" id="name">
                    </div>
                    <div class="form-group">
                        <label for="surname">Soyad</label>
                        <input type="text" class="form-control" asp-for="Surname" id="surname">
                    </div>
                    <div class="form-group">
                        <label for="username">Kullanıcı Adı</label>
                        <input type="text" class="form-control" asp-for="Username" id="username">
                    </div>
                    <div class="form-group">
                        <label for="password">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password" id="password">
                    </div>
                    <div class="form-group">
                        <label for="confirmpassword">Şifre Tekrar</label>
                        <input type="password" class="form-control" asp-for="ConfirmPassword" id="confirmpassword">
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
