@model ProductUpdateDTO
@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Ürün Güncelle</div>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="ProductId" />
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label for="name">Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="Name" id="name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="price">Ürün Fiyatı</label>
                        <input type="text" class="form-control" asp-for="Price" id="price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="imageUrl">Resim Yolu</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="category">Ürün Kategorisi</label>
                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryNames, new { @class = "form-control", @id = "category" })
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="description">Ürün Açıklaması</label>
                        <textarea class="form-control" rows="4" asp-for="Description" id="description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
