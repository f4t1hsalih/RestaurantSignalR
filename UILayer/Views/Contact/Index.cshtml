@model List<ContactResultDTO>
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h4 class="page-title">İletişim</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="card-sub">
                    İletişim Alanı İşlemlerini Bu Tablodan Yapabilirsin
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 10%;">Lokasyon</th>
                            <th scope="col" style="width: 15%;">E-Mail</th>
                            <th scope="col" style="width: 10%;">Telefon</th>
                            <th scope="col" style="width: 15%;">Alt Başlık</th>
                            <th scope="col" style="width: 35%;">Alt Açıklama</th>
                            <th scope="col" style="width: 15%;">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Location</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.FooterTitle</td>
                                <td>@item.FooterDescription</td>
                                <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-primary btn-round">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
