@model List<ProductResultDTO>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<h4 class="page-title">Ürünler</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="card-sub">
                    Ürün İşlemlerini Bu Tablodan Yapabilirsin
                    <a href="/Product/CreateProduct/" class="btn btn-primary float-right">Ürün Ekle</a>
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Kategori</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img class="photo mr-2" src="@item.ImageUrl" alt="@item.Name">
                                        <span>@item.Name</span>
                                    </div>
                                </td>
                                <td>@item.Price</td>
                                <td>@item.CategoryName</td>
                                <td>
                                    @if (@item.Status)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </td>
                                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-warning btn-round">Güncelle</a></td>
                                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger btn-round" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
