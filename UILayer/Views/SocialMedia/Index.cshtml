@model List<SocialMediaResultDTO>
@{
    ViewData["Title"] = "Sosyal Medya Hesapları";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h4 class="page-title">Sosyal Media Hesapları</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="card-sub">
                    Sosyal Medya İşlemlerini Bu Tablodan Yapabilirsin
                    <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary float-right">Sosyal Medya Hesabı Ekle</a>
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">Başlık</th>
                            <th scope="col">Link</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Url</td>
                                <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-warning">Güncelle</a></td>
                                <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
