@model List<TableResultDTO>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <title>Bahçe Durumları</title>
    <meta name="description" content="Bahçelerin doluluk durumlarını görüntüleyin.">
    <style>
        .container-fluid {
            max-width: 1200px;
            margin: 0 auto;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .widget {
            width: 200px;
            height: 100px;
            display: flex;
            align-items: center;
            border-radius: 10px;
            color: white;
            font-family: Arial, sans-serif;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .widget-empty {
            background-color: #2ecc71;
        }

            .widget-empty:hover {
                background-color: #27ae60;
                transform: scale(1.05);
            }

        .widget-full {
            background-color: #e74c3c;
        }

            .widget-full:hover {
                background-color: #c0392b;
                transform: scale(1.05);
            }

        .widget-icon {
            width: 50px;
            height: 50px;
            background-color: white;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 10px;
        }

            .widget-icon i {
                font-size: 24px;
            }

        .widget-text {
            margin-left: 15px;
        }

            .widget-text h3 {
                margin: 0;
                font-size: 16px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .widget-text p {
                margin: 0;
                font-size: 14px;
            }
    </style>
</head>
<body class="sub_page">
    @await Component.InvokeAsync("_UILayoutHeader")
    @await Component.InvokeAsync("_UILayoutNavbar")
    </div>

    <div class="container-fluid py-4">
        <div class="row">
            @foreach (var item in Model)
            {
                var widgetClass = item.Status ? "widget-full" : "widget-empty";
                var iconColor = item.Status ? "color: #e74c3c;" : "color: #2ecc71;";
                <div>
                    <div class="widget @widgetClass">
                        <div class="widget-icon">
                            @if (item.Status)
                            {
                                <i class="fas fa-chair" style="@iconColor"></i>
                            }
                            else
                            {
                                <a href="/Menu/Index/@item.TableId" title="Masaya Git">
                                    <i class="fas fa-chair" style="@iconColor"></i>
                                </a>
                            }
                        </div>
                        <div class="widget-text">
                            <h3>@item.Name</h3>
                            <p>@(item.Status ? "Dolu" : "Boş")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @await Component.InvokeAsync("_UILayoutFooter")
</body>
</html>
