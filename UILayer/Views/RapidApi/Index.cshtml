@model List<ResultTastyApi>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table .photo {
            width: 50px; /* Fotoğraf çerçeve boyutu */
            height: 50px;
            overflow: hidden;
            border-radius: 50%; /* Yuvarlak görünüm */
            border: 2px solid #ddd; /* Çerçeve rengi */
            margin: 5px; /* Çerçeve etrafındaki boşluk */
        }

            table .photo img {
                width: 100%; /* Çerçeveye tam oturması için */
                height: 100%;
                object-fit: cover; /* Resmi çerçeveye sığdırır */
            }

    </style>
</head>
<body class="sub_page">

    @await Component.InvokeAsync("_UILayoutHeader")

    @await Component.InvokeAsync("_UILayoutNavbar")
    </div> @*Bu div'i silme *@

    <br />
    <div class="container-fluid py-4">

        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive">
                <table class="table table-bordered table-hover text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Ürün</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam</th>
                            <th>Sil</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @if (Model?.Any() == true)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="photo">
                                                <img src="@item.thumbnail_url" alt="@item.name">
                                            </div>
                                            <span style="margin-left: 10px;">@item.name</span>
                                        </div>
                                    </td>
                                    <td>@item.total_time_minutes</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <a class="btn btn-sm btn-danger btn-delete"
                                           title="Bu ürünü sepetten sil"
                                           href="/Basket/DeleteProduct/">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted"><i>Sayfaya Veri Yüklenemedi!</i></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    @await Component.InvokeAsync("_UILayoutFooter")
    @await Component.InvokeAsync("_UILayoutScripts")

</body>
</html>

