<script>
    document.addEventListener('DOMContentLoaded', function () {
        const navItems = document.querySelectorAll('.nav-item');
        const activeItem = localStorage.getItem('activeNavItem');

        // Önceki aktif menüyü yükle
        if (activeItem) {
            navItems.forEach(item => {
                if (item.querySelector('a').getAttribute('href') === activeItem) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        }

        // Menüye tıklama olayları
        navItems.forEach(item => {
            item.addEventListener('click', function (e) {
                e.preventDefault();

                // Aktif menüyü güncelle
                navItems.forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');

                const href = this.querySelector('a').getAttribute('href');
                localStorage.setItem('activeNavItem', href);

                // Yönlendirme
                if (href !== '#') {
                    window.location.href = href;
                }
            });
        });
    });
</script>
