<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

<script type="text/javascript">
    $(document).ready(() => {
        // SignalR bağlantısı oluştur
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("https://localhost:7068/SignalRHub")
            .build();

        // Başlangıç durumu
        $("#connstatus").text(connection.state);

        // Bağlantı başlatma
        connection.start()
            .then(() => {
                $("#connstatus").text("Bağlantı kuruldu");
                setInterval(() => {
                    connection.invoke("SendCategoryCount");
                    connection.invoke("SendActiveCategoryCount");
                    connection.invoke("SendPassiveCategoryCount");
                    connection.invoke("SendActiveProductCount");
                }, 1000);
            })
            .catch((err) => {
                $("#connstatus").text("Bağlantı hatası");
                console.error(err.toString());
            });

        // Bağlantı durum değişikliklerini dinle
        connection.onclose(() => {
            $("#connstatus").text("Bağlantı kapalı");
        });

        connection.on("ReceiveCategoryCount",(categoryCount)=>{
            $("#categoryCounter").text(categoryCount);
        })
        connection.on("ReceiveActiveCategoryCount",(activeCategoryCount)=>{
            $("#activeCategoryCounter").text(activeCategoryCount);
        })
        connection.on("ReceivePassiveCategoryCount",(passiveCategoryCount)=>{
            $("#passiveCategoryCounter").text(passiveCategoryCount);
        })
        connection.on("ReceiveActiveProductCount",(activeProductCount)=>{
            $("#activeProductCounter").text(activeProductCount);
        })

    });
</script>
